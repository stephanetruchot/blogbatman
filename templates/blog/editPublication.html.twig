{% extends 'base.html.twig' %}

{% block title %}Modification d'une publication {% endblock %}

{% block body %}
    <div class="container-fluid">

        {# Titre h1 #}
        <div class="row">
            <h1 class="col-12 text-center my-5">Modification d'une publication</h1>
        </div>

        {# Lien pour retourner sur l'article #}
        <div class="row">
            <div class="text-center col-12">
                <a href="{{ path('blog_publication_view', {slug: form.vars.value.slug}) }}">Revenir sur l'article</a>
            </div>
        </div>

        {# Affichage du formulaire de modification d'article #}
        <div class="row">
            <div class="col-12 col-md-8 offset-md-2">
                {{ form(form) }}
            </div>
        </div>

    </div>

{% endblock %}
